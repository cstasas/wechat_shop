.pyg_swiper swiper {
  height: 340rpx;
}
.pyg_swiper swiper image {
  width: 100%;
}
.pyg_nav {
  display: flex;
}
.pyg_nav navigator {
  padding: 20rpx;
  flex: 1;
}
.pyg_nav navigator image {
  width: 100%;
}
.pyg_floor .floor_group .floor_title {
  padding: 10rpx 0;
}
.pyg_floor .floor_group .floor_title image {
  width: 100%;
}
.pyg_floor .floor_group .floor_content {
  overflow: hidden;
}
.pyg_floor .floor_group .floor_content navigator {
  float: left;
  width: 33.33%;
}
.pyg_floor .floor_group .floor_content navigator:nth-last-child(-n+4) {
  height: 27.72711207vw;
  border-left: 10rpx solid #fff;
}
.pyg_floor .floor_group .floor_content navigator:nth-child(2),
.pyg_floor .floor_group .floor_content navigator:nth-child(3) {
  border-bottom: 10rpx solid #fff;
}
.pyg_floor .floor_group .floor_content navigator image {
  width: 100%;
  height: 100%;
}
