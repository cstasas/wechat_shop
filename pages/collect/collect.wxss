.goods_collect_main {
  background-color: #f3f4f6;
}
.goods_collect_main .goods_collect_title {
  padding: 25rpx;
}
.goods_collect_main .goods_collect_title .goods_collect_text {
  padding: 15rpx;
  border: 1px solid #ccc;
  margin-right: 20rpx;
  font-size: 24rpx;
  background-color: #fff;
}
.goods_collect_main .goods_collect_title .active {
  color: var(--themeColor);
  border: 1px solid currentColor;
}
.goods_collect_main .goods_collect_content .tabs_left {
  background-color: #fff;
}
.goods_collect_main .goods_collect_content .tabs_left .goods_item {
  display: flex;
  border-bottom: 1px solid #ccc;
}
.goods_collect_main .goods_collect_content .tabs_left .goods_item .goods_img {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.goods_collect_main .goods_collect_content .tabs_left .goods_item .goods_img image {
  width: 70%;
}
.goods_collect_main .goods_collect_content .tabs_left .goods_item .goods_content {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.goods_collect_main .goods_collect_content .tabs_left .goods_item .goods_content .goods_content_title {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.goods_collect_main .goods_collect_content .tabs_left .goods_item .goods_content .goods_content_price {
  color: var(--themeColor);
  font-size: 32rpx;
}
